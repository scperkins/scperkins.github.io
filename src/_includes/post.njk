---
layout: layout.njk
---

<article class="post">
  <header class="post-header">
    <h1 class="post-title">{{ title }}</h1>
    <time class="post-date" datetime="{{ date | isoDate }}">{{ date | postDate }}</time>
  </header>
  <div class="post-content">
    {{ content | safe }}
  </div>
</article>
